generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Office {
  id     String   @id @default(cuid())
  title  String
  Gestor Gestor[]

  @@map("offices")
}

model Gestor {
  id         String   @id @default(cuid())
  name       String
  email      String
  password   String
  birthday   String?
  office     Office   @relation(fields: [officeId], references: [id])
  officeId   String
  is_active  Boolean  @default(true)
  started_at DateTime @default(now())

  @@map("gestors")
}
